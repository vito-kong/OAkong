<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0.0"
    android:pivotX="50.0%"
    android:pivotY="50.0%"
    android:toDegrees="360.0" >

    <shape
        android:innerRadiusRatio="3.0"
        android:shape="ring"
        android:thicknessRatio="8.0"
        android:useLevel="false" >
        <size
            android:height="20.0dip"
            android:width="20.0dip" />

        <gradient
            android:centerColor="#ffd9dbdd"
            android:centerY="0.5"
            android:endColor="#ffc2c2c2"
            android:startColor="#ffd9dbdd"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>