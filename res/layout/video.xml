<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    >

     <SurfaceView
        android:id="@+id/mSurfaceView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         android:background="@android:color/transparent"
       	/> 

        <ImageView
            android:id="@+id/lz_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" 
            
            />

        <ImageView
            android:id="@+id/camera_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/mm_title_btn_camera_switch" />

    	<TextView android:layout_width="wrap_content"
    	    	  android:layout_height="wrap_content"
    	    	  android:text="00:00"
    	    	  android:textColor="@color/white"
    	    	  android:textSize="15sp"
    	    	  android:layout_gravity="bottom|center_horizontal"	
    	    	  android:layout_marginBottom="40dp"
    	    	  android:id="@+id/time_record"
    	    />
    				
    	
   
        <Button
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:background="@drawable/video_recorder_start_btn_nor" 
            android:id="@+id/video_record"
            android:layout_gravity="bottom|center_horizontal"
            />
   

</FrameLayout>