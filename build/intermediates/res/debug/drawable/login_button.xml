    <item android:state_window_focused="false" android:drawable="@drawable/login_normal" />

    <!-- 非触摸模式下获得焦点并单击时的背景图片-->

    <item android:state_focused="true" android:state_pressed="true"

        android:drawable="@drawable/login_clicked" />

    <!-- 触摸模式下单击时的背景图片-->

    <item android:state_focused="false" android:state_pressed="true"

        android:drawable="@drawable/login_clicked" />

    <!--选中时的图片背景-->

    <item android:state_pressed="true" android:drawable="@drawable/login_clicked" />

    <!--获得焦点时的图片背景-->

    <item android:state_focused="true" android:drawable="@drawable/login_clicked" />

