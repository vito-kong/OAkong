<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/items_tubar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/top" >

        <ImageView
            android:id="@+id/lz_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/categoty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="修改密码"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </FrameLayout>

    <com.donggu.gzx.ui.CustomerScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/password_old"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="旧密码"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/edit_password_old"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/favorite_login_editor_disselect"
                    android:password="true"
                    android:textSize="13sp"
                    android:maxLength="10"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/password_new"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="新密码"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/edit_password_new"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/favorite_login_editor_disselect"
                    android:password="true"
                    android:textSize="13sp" 
                    android:maxLength="10"
                    />
            </LinearLayout>

            <Button
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/black"
                android:textSize="13sp" 
                android:id="@+id/pwd_reset_commit"
                />
        </LinearLayout>
    </com.donggu.gzx.ui.CustomerScrollView>

</LinearLayout>